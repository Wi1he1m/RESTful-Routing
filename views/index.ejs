<% include ./partials/header %>
<h1>Blogs Page</h1>

<% blog.forEach(function(blog){ %>

<h4><%= blog.title %></h4>
<img src="<%= blog.image %>">
<span><%= blog.published.toDateString() %></span>
<p>
   <%- blog.body.substring(0, 130) %>...
</p>
   <a href="/blogs/<%= blog._id %>">Read more</a>
<% }); %>

<% include ./partials/footer %>